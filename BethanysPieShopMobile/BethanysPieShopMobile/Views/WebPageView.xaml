        <StackLayout>
            <Label Text="Visit our site" FontSize="24"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />

            <WebView Source="https://www.eucsyd.dk/" WidthRequest="500" HeightRequest="500"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>